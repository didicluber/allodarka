{% extends '::base.html.twig' %}

{% block body %}

    <h1>Cinemas list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Labelcinema</th>
                <th>Adresse</th>
                <th>Cp</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cinema in cinemas %}
            <tr>
                <td><a href="{{ path('cinema_show', { 'id': cinema.id }) }}">{{ cinema.id }}</a></td>
                <td>{{ cinema.labelcinema }}</td>
                <td>{{ cinema.adresse }}</td>
                <td>{{ cinema.cp }}</td>
                <td>{{ cinema.ville }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cinema_show', { 'id': cinema.id }) }}">show</a>
                        </li>

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cinema_new') }}">Create a new cinema</a>
        </li>
    </ul>
{% endblock %}
